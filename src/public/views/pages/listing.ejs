<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>
        <%= config.Website.HeadTitle %>
    </title>
    <link href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css" rel="stylesheet">
    <link href="../css/style.css" rel="stylesheet">
</head>

<body class="font-sans">
    <%- include('../partials/navbar') %>
        <main>
            <section class="py-16 px-8" id="Listings">
                <h3 class="text-2xl font-bold mb-8 text-center">
                    <%= properties.length===0 ? 'No Listings Available' : 'Browse All Listings' %>
                </h3>
                <div class="flex flex-wrap justify-center gap-8">
                    <% properties.forEach(property=> { %>
                        <div class="bg-white shadow-lg rounded-lg overflow-hidden h-100 w-80">
                            <img src="<%= property.featuredImage ? 'data:image/jpeg;base64,' + Buffer.from(property.featuredImage).toString('base64') : 'https://placehold.co/300x200' %>"
                                alt="<%= property.name %>" class="w-full h-48 object-cover" />
                            <div class="p-4">
                                <h4 class="text-lg font-semibold">
                                    <%= property.name %>
                                </h4>
                                <p class="text-gray-600">
                                    <%= property.currencySymbol %>
                                        <%= property.price %> per night
                                </p>
                            </div>
                        </div>
                        <% }) %>
                </div>
            </section>

        </main>
        <script src="../js/booking.js"></script>
        <%- include('../partials/footer') %>
</body>

</html>