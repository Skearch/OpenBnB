<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Login - <%= config.Business.Name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link href="/css/style.css" rel="stylesheet" />
  </head>

  <body class="font-sans">
    <%- include('../partials/navbar') %>
    <main class="py-16 px-8">
      <section class="max-w-md mx-auto bg-white shadow-lg rounded-lg p-8">
        <h1 class="text-2xl font-bold text-center mb-6">Login</h1>
        <form id="loginForm" class="space-y-4">
          <div>
            <label for="email" class="block text-sm font-medium"
              >Email Address</label
            >
            <input
              type="email"
              id="email"
              class="w-full border rounded-lg p-2"
              required
            />
          </div>
          <div>
            <label for="password" class="block text-sm font-medium"
              >Password</label
            >
            <input
              type="password"
              id="password"
              class="w-full border rounded-lg p-2"
              required
            />
          </div>
          <button
            type="submit"
            class="custom-call-to-action w-full py-2 rounded-lg"
          >
            Login
          </button>
        </form>
        <p class="text-center mt-4 text-sm">
          Don't have an account?
          <a href="/account/register" class="text-blue-500 hover:underline"
            >Register here</a
          >.
        </p>
      </section>
    </main>
    <%- include('../partials/footer') %>
    <script src="../js/pages/login.js"></script>
  </body>
</html>
