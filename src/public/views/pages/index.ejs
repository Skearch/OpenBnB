<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Home - <%= config.Business.Name %></title>
    <link
      href="https://cdn.jsdelivr.net/npm/tailwindcss@2.2.19/dist/tailwind.min.css"
      rel="stylesheet"
    />
    <link href="../css/style.css" rel="stylesheet" />
  </head>

  <body class="font-sans">
    <%- include('../partials/navbar') %>
    <main>
      <section class="bg-custom text-white py-32 px-8 text-center">
        <h2 class="text-4xl font-bold mb-6">
          <%= config.Website.Hero.Title %>
        </h2>
        <p class="text-lg mb-10"><%= config.Website.Hero.Description %></p>
        <div class="flex justify-center space-x-4">
          <a
            href="/listing/browse"
            class="custom-call-to-action px-8 py-4 rounded-lg flex items-center space-x-2"
          >
            <span> <%= config.Website.Hero.Button %> </span>
          </a>
        </div>
      </section>

      <section class="py-16 px-8" id="recommend">
        <h3 class="text-2xl font-bold mb-8 text-center">
          <%= config.Website.Recommend.Title %>
        </h3>
        <div
          class="flex flex-wrap justify-center gap-8"
          id="showcase-container"
        ></div>
        <div class="text-center mt-8">
          <a href="/listing/browse" class="hover:underline">
            <%= config.Website.Recommend.Button %>
          </a>
        </div>
      </section>

      <section class="py-16 px-8 bg-gray-100" id="reviews">
        <h3 class="text-2xl font-bold mb-8 text-center">
          <%= config.Website.Reviews.Title %>
        </h3>
        <div
          class="grid grid-cols-1 md:grid-cols-2 gap-8 max-w-4xl mx-auto"
          id="reviews-container"
        ></div>
      </section>

      <section class="py-16 px-8 bg-orange-100 text-center" id="subscribe">
        <h3 class="text-2xl font-bold mb-4">
          <%= config.Website.Subscribe.Title %>
        </h3>
        <div class="flex justify-center space-x-4 max-w-md mx-auto">
          <input
            type="email"
            placeholder="Email"
            class="flex-1 p-3 border rounded-lg"
          />
          <button class="custom-call-to-action px-6 py-3 rounded-lg">
            <%= config.Website.Subscribe.Button %>
          </button>
        </div>
      </section>
    </main>

    <script src="../js/index.js"></script>
    <%- include('../partials/footer') %>
  </body>
</html>
