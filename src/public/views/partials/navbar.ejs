<header
  class="header-custom text-white py-4 px-12 flex justify-between items-center"
>
  <div class="flex items-center">
    <h1 class="text-2xl font-bold"><%= config.Business.Name %></h1>
  </div>
  <nav class="flex items-center space-x-4">
    <a href="/" class="hover:underline">Home</a>
    <a href="/listing/browse" class="hover:underline">Browse</a>
    <a href="/#recommend" class="hover:underline">Best Picks</a>
    <a href="/#subscribe" class="hover:underline">Subscribe</a>
    <% if (user) { %>
    <a href="/dashboard/redirect">
      <button class="custom-button px-4 py-2 rounded-full">Dashboard</button>
    </a>
    <% } else { %>
    <a href="/account/login">
      <button class="custom-button px-4 py-2 rounded-full">Sign In</button>
    </a>
    <% } %>
  </nav>
</header>
