<aside
  class="sidebar-custom bg-gray-800 text-white h-screen fixed top-0 left-0 z-40 flex flex-col w-64 transition-transform duration-300 ease-in-out md:w-52"
  aria-label="Sidebar navigation">
  <div class="p-4 border-b border-gray-700 flex items-center justify-between">
    <h1 class="text-2xl font-bold mb-0 truncate">
      <%= config.Business.Name %>
    </h1>
    <button id="closeSidebar" class="md:hidden text-white focus:outline-none focus:ring-2 focus:ring-gray-500 rounded"
      aria-label="Close sidebar" type="button">
      <i class="fas fa-times text-xl"></i>
    </button>
  </div>
  <nav class="flex-1 flex flex-col space-y-2 p-4" role="navigation">
    <a href="/dashboard/redirect"
      class="anchor-dark-custom block px-4 py-2 rounded hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500">
      Dashboard
    </a>
    <a href="/dashboard/properties"
      class="anchor-dark-custom block px-4 py-2 rounded hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500">
      Properties
    </a>
    <a href="/dashboard/accounts"
      class="anchor-dark-custom block px-4 py-2 rounded hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500">
      Accounts
    </a>
    <a href="/dashboard/my-account"
      class="anchor-dark-custom block px-4 py-2 rounded hover:bg-gray-700 focus:outline-none focus:ring-2 focus:ring-gray-500">
      My Account
    </a>
  </nav>
  <div class="p-4 border-t border-gray-700">
    <button id="logout-button"
      class="custom-call-to-action block text-center px-4 py-2 rounded-lg w-full hover:bg-gray-600 transition flex items-center justify-center space-x-2"
      type="button">
      <i class="fas fa-sign-out-alt"></i>
      <span>Logout</span>
    </button>
  </div>
</aside>