<aside id="sidebar"
  class="bg-white shadow text-black w-64 h-screen fixed top-0 left-0 z-40 transform -translate-x-full md:translate-x-0 transition-transform duration-300 ease-in-out"
  aria-label="Main navigation">
  <div class="p-4 flex justify-between items-center border-b border-gray-200">
    <h1 class="text-xl sm:text-2xl font-bold truncate">
      <%= config.Business.Name %>
    </h1>
    <button id="closeSidebar" class="md:hidden text-black focus:outline-none focus:ring-2 focus:ring-gray-500 rounded"
      aria-label="Close sidebar" type="button">
      <i class="fas fa-times text-xl"></i>
    </button>
  </div>
  <nav class="flex-1 flex flex-col space-y-1 p-4" role="navigation">
    <a href="/"
      class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Home</a>
    <% if (user && user.role==='owner' ) { %>
      <a href="/dashboard/overview"
        class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Overview</a>
      <a href="/dashboard/properties"
        class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Properties</a>
      <a href="/dashboard/bookings"
        class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Bookings</a>
      <a href="/dashboard/accounts"
        class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Accounts</a>
      <a href="/dashboard/subscriptions"
        class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Subscriptions</a>
      <a href="/dashboard/schedule"
        class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Schedule</a>
      <% } else if (user && user.role==='guest' ) { %>
        <a href="/dashboard/mybooking"
          class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">My
          Bookings</a>
        <% } else if (user && user.role==='staff' ) { %>
          <a href="/dashboard/overview"
            class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Overview</a>
          <a href="/dashboard/subscriptions"
            class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Subscriptions</a>
          <a href="/dashboard/schedule"
            class="block px-4 py-2 rounded hover:bg-gray-100 transition-colors focus:outline-none focus:ring-2 focus:ring-gray-500">Schedule</a>
          <% } %>
  </nav>
  <div class="p-4 border-t border-gray-200">
    <button id="logout-button"
      class="bg-red-500 text-white px-4 py-2 rounded-lg w-full hover:bg-red-600 transition flex items-center justify-center space-x-2"
      type="button">
      <i class="fas fa-sign-out-alt"></i>
      <span>Logout</span>
    </button>
  </div>
</aside>