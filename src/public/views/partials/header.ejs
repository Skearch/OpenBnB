<header class="bg-white shadow px-4 sm:px-6 py-4 flex justify-between items-center sticky top-0 z-20 w-full">
  <h2 class="text-base sm:text-lg md:text-xl font-semibold truncate">
    Dashboard
  </h2>
  <div class="flex items-center space-x-2 sm:space-x-4">
    <span class="text-gray-600 text-xs sm:text-sm md:text-base truncate">
      Welcome, <%= user && user.name ? user.name : 'Guest' %>
    </span>
    <button id="sidebarToggle" class="md:hidden text-black focus:outline-none focus:ring-2 focus:ring-gray-500 rounded"
      aria-label="Open sidebar" type="button">
      <i class="fas fa-bars text-xl"></i>
    </button>
  </div>
</header>